<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/fl_btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dimpopupwindow_standard_margin"
                android:gravity="center"
                android:textColor="@color/dimpopupwindow_normal_text"
                android:textSize="16sp" />
        </FrameLayout>

        <View
            android:layout_width="@dimen/dimpopupwindow_titlebar_default_divider_size"
            android:layout_height="match_parent"
            android:background="@color/dimpopupwindow_segment_divider" />

        <FrameLayout
            android:id="@+id/fl_btn_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dimpopupwindow_standard_margin"
                android:gravity="center"
                android:textColor="@color/dimpopupwindow_normal_text"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimpopupwindow_titlebar_default_divider_size"
        android:background="@color/dimpopupwindow_segment_divider" />

    <TextView
        android:id="@+id/tv_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimpopupwindow_normal_btn_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="@android:string/cancel"
        android:textColor="@color/dimpopupwindow_normal_text"
        android:textSize="16sp" />
</LinearLayout>